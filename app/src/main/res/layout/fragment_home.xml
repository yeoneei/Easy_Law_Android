<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:background="#FDBF40"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FDBF40"
            android:layout_alignParentTop="true"
            android:id="@+id/home_top"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="EASY LAW"
                android:textColor="#FFFFFF"
                android:textSize="15dp"
                android:layout_gravity="center_horizontal"
                android:padding="10dp"
                android:textStyle="bold"/>
            <RelativeLayout
                android:layout_width="280dp"
                android:layout_height="30dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/btn_round_white"
                android:id="@+id/search"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textSize="15dp"
                    android:textColor="#51413C"
                    android:textStyle="bold"
                    android:layout_alignParentLeft="true"
                    android:id="@+id/search_ranking_number"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="30dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="알바비"
                    android:textSize="15dp"
                    android:textColor="#51413C"
                    android:layout_marginRight="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:textStyle="bold"
                    android:id="@+id/search_ranking"
                    android:layout_marginLeft="30dp"/>
            </RelativeLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="오늘의 변호사"
                android:textStyle="bold"
                android:textSize="13dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="20dp"
                android:textColor="#FFFFFF"/>
        </LinearLayout>
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/home_top">
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:id="@+id/rcy_lawer_home"/>
        </HorizontalScrollView>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:backgroundTint="#FDBF40"
            android:layout_marginBottom="65dp"
            android:background="#FDBF40"
            android:src="@drawable/mike"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"/>

    </RelativeLayout>
</layout>